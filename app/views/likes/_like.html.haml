- if user_signed_in?
  - if review.like_user(current_user.id)
    = button_to review_like_path(like, review_id: review.id), method: :delete, id: "like-button", remote: true do
      = image_tag("icon_red_heart.svg")
      %span
        = review.like_count
  - else
    = button_to review_likes_path(review), id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      %span
        = review.like_count
- else
  - = image_tag("icon_heart.svg")
  %span
    = review.like_count
