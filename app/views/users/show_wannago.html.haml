= render partial: 'shares/header'
.user-mypage-view
  .user-mypage-heading-wrap
    .user-mypage-location-wrap
      .user-location-wrap
        .user-location
          %ul.location-bar
            %li
              %span
                = image_tag 'home_icon.png'
            %li.link
              = link_to "食べログ", root_path, method: :get
            %li
              %span
                = image_tag 'location_arrow.png'
            %li.link
              = link_to "食べログレビュアー"
            %li
              %span
                = image_tag 'location_arrow.png'
            %li.username
              %p
                =link_to "#{@user.nickname}さん", user_path(@user.id)
            %li
              %span
                = image_tag 'location_arrow.png'
            %li.gone-wannago-all
              %p
                行きたい一覧

    .user-mypage-header-wrap
      .user-mypage-header
        .user-mypage-header__cover-image
          .user-cover-image
            - if @user.background_image?
              = image_tag @user.background_image.url, class: "image"
            - else
              = image_tag "61450017_624.gif", class: "image"
          .user-page-name
            %p
              = @user.nickname
              のレストランガイド
          - if @user.id == current_user.id
            %a.rvwr-mypage-setting{ href: "/users/#{current_user.id}/edit", style: "color: black;"}
              %span
                レビュアーページ設定
        .user-mypage-header__user-avatar
          = link_to user_path(@user.id) do
            -if @user.avatar?
              = image_tag @user.avatar.url
            -else
              = image_tag "avatar_nophoto.gif"
        .user-mypage-header-contents
          .user-mypage-header-contents__image-wrap
          .user-mypage-header-contents__info
            .user-mypage-header-contents__userinfo
              .user-mypage-header-contents__info--nickname
                %a.username-mypage-link{ href:"/users/#{@user.id}", style:"color: black"}
                  = @user.nickname
          .mypage-header-contents__headline
            %ul.mypage-header-contents__headline-ul
              %li.top-page-link
                %a.top-page-link{ href: "/users/#{@user.id}", style: "color: #595960;"}
                  %span
                    トップ
              %li.gone-page-gone-shop-link
                %a.top-page-link{ href: "/users/#{@user.id}/show_gone", style: "color: #595960;"}
                  %span
                    行ったお店
              %li.wannago-page-wannago-shop-link
                %a.top-page-link{ href: "/users/#{@user.id}/show_wannago", style: "color: #595960;"}
                  %span
                    行きたいお店
              %li.matome-link
                %a.top-page-link{ href: "#", style: "color: #595960;"}
                  %span
                    まとめ
              %li.following-link
                %a.top-page-link{ href: "/following/#{@user.id}", style: "color: #595960;"}
                  %span
                    フォロー中
              %li.followers-link
                %a.top-page-link{ href: "/followers/#{@user.id}", style: "color: #595960;"}
                  %span
                    フォロワー
  .user-page-content
    .user-page-content__side
      .user-page-content__side__top
        .user-page-content__side__top__area
          .user-page-content__side__top__area__header
            %p.upper
              エリア
            %p
              から探す
            %i.fas.fa-map-marker-alt
          .user-page-content__side__top__area__main
            %p
              すべて
            %i.fas.fa-angle-right
          .user-page-content__side__top__area__footer
            = link_to "このエリアを地図で見る"
            %i.fas.fa-map
        .user-page-content__side__top__genre
          .user-page-content__side__top__genre__header
            %p.upper
              ジャンル
            %p
              から探す
            %i.fas.fa-utensils
          .user-page-content__side__top__genre__main
            %p
              すべて
            %i.fas.fa-angle-right
    .user-page-content-main
      .review-search-word
        %i.fas.fa-search
        %p
          検索条件が指定されていません。
      .shop_main-left-change-review-sort-list-wannago
        %ul.shop_main-left-change-review-sort-list-wannago-ul
          %li.shop_main-left-change-review-sort-list-wannago__all
            %a.shop_main-left-change-review-sort-list-wannago__all--inner{ href: "/users/#{@user.id}/show_all", style: "color: #595960;"}
              %i.far.fa-check-circle
              %span
                すべて
          %li.shop_main-left-change-review-sort-list-wannago__gone
            %a.shop_main-left-change-review-sort-list-wannago__gone--inner{ href: "/users/#{@user.id}/show_gone", style: "color: #595960;"}
              %i.fas.fa-heart
                %span
                  行った（口コミ）
          %li.shop_main-left-change-review-sort-list-wannago__wannago
            %i.fas.fa-thumbtack
            行きたい
      .shop_main-left-review-order-change-wannago
        %ul.shop_main-left-review-order-change-list-ul
          %li.shop_main-left-review-order-change-list1
            %i.fas.fa-sort
            %i.fas.fa-chevron-circle-down
            更新日
          %li.shop_main-left-review-order-change-list2
            = link_to "行ったの点数／期待度"
          %li.shop_main-left-review-order-change-list3
            = link_to "ランキング"
      .shop-main-left-shop-review-sorting
        %p.review-counting
          1～
          5
          件を表示 ／ 全
          5
          件
        .review-sorting-by-number
          表示件数：
          .review-sorting-by-number__select-box
            %select.select-box
              %option
                20
              %option
                50
              %option
                100
      = render 'wants/index', shop: @shop

= render partial: 'shares/footer'
