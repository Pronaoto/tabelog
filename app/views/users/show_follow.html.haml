= render partial: 'shares/header'
.mypage-view
  .mypage-heading-wrap
    #mypage-location-wrap
      #location-wrap
        #location
          %ul.location-bar
            %li
              %span
                = image_tag 'home_icon.png'
            %li.link
              = link_to "食べログ", root_path
            %li
              %span
                = image_tag 'location_arrow.png'
            %li.link
              = link_to "食べログレビュアー"
            %li
              %span
                = image_tag 'location_arrow.png'
            %li.username
              %p
                = @user.nickname
                さん
    .mypage-header-wrap
      .mypage-header
        .mypage-header__cover-image
          #cover-image
            = form_for @user do |f|
              .change-cover-image
                -if current_user.background_image.nil?
                  = image_tag "nature-wallpaper-2.jpg", class:'image'
                -else
                  = image_tag @user.background_image.url, class:'image'
                %label.change-header-cover.fas.fa-camera
                  カバー写真を変更
                  = f.file_field :background_image, style: 'display: none;'
                  = f.hidden_field :user_id, value: current_user.id
                = f.submit "変更を保存する", class: "cover-image-submit"
          .page-name
            %p
              = @user.nickname
              のレストランガイド
          / 下記にフォローボタンのビューファイルをrender
          = render 'follow_form'
          .rvwr-page-setting
            = link_to "レビュアーページ設定", edit_user_path

        =form_for @user do |f|
          .mypage-header__user-avatar
            - if current_user.avatar?
              = image_tag @user.avatar.url
            - else
              = image_tag "avatar_nophoto.gif"
            %label.change-header-avatar-image.fas.fa-camera
              変更
              = f.file_field :avatar, style: 'display: none;'
              = f.hidden_field :user_id, value: current_user.id
            = f.submit "保存", class: "mypage-avatar-image-submit"
        .mypage-header-contents
          .mypage-header-contents__image-wrap
          .mypage-header-contents__info
            .mypage-header-contents__userinfo
              .mypage-header-contents__info--nickname
                = @user.nickname
              .mypage-header-contents__info--prof
                = link_to "➤ プロフィール詳細", user_path(@user.id)
    .follow-container
      .follow-contents
        .follow-heading
          フォロー中
          = @user.followings.count
          人
        %ul.follow-grouping
          %li.follow-rvw-newest
            = link_to "口コミ最新更新日"
          %li.follow-view-sort
            = link_to "登録日"
        .js-user-rvwr-contents
          .follow-rvwr-list
            .follow-rvwr-list__box
              - @user.followings.each do |user|
                .follow-rvwr-list__item
                  .follow-rvwr-item
                    .follow-rvwr-item__header
                      .follow-rvwr-item__cover.p-rvwr-cover.p-rvwr-cover--s
                        .rvwr-cover-img
                          .img-frame
                            = image_tag user.background_image.url, width:" 300", height: "80", class: "up-image"
                      .follow-rvwr-item__user-img
                        .rvwr-user-img__box
                          = image_tag user.avatar.url, width:"60", height:"60", class: "user-image"
                      - @reviews.each do |review|
                        %p.follow-rvwr-item__page-name
                          = review.title
                    .follow-rvwr-item__contents
                      .follow-rvwr-item__contents-head
                        .follow-rvwr-item__status
                          %p.follow-rvwr-item__status-text
                            %span.rvwr-nickname
                              = user.nickname
                              = link_to '詳細', user_path(user)
                            %span.follow-rvwr-item_attr
                              フォロワー人数:
                              = user.followers.count
                        .follow-rvwr-item__follow
                      %p.follow-rvwr-item__log-count
                        = @reviews.count
                        ログ
                      %p.follow-rvwr-item__count
                        = @reviews.count
                        軒のお店に行きました
                      %p.follow-rvwr-item__lastupdate
                        %span.rf-today.today-highlight
                        = user.followings.count
                        時に更新
= render partial: 'shares/footer'
